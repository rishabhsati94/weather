<!doctype html>
<html lang="en">

{{>header}}

<body>
    <!-- Navbar -->
    {{>navbar}}

    <!-- Header -->

    <div class=".container-fluid header-part">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="tempForm">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="toplayer">
                        <p id="day"></p>
                        <p id="todaydate"></p>
                    </div>
                
                    <div class="mainLayer">
                        <p id="city_Name"></p>
                        <div class="middleLayer data_hide">
                            <p id="temp"><span id="temp_real">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    {{>footer}}

    <!-- Option 1: Bootstrap Bundle with Popper -->
    {{>scripts}}
    <script src="js/main.js"></script>

</body>

</html>