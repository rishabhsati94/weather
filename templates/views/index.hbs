<!doctype html>
<html lang="en">

{{>header}}

<body>
    <!-- Navbar -->
    {{>navbar}}


    <!-- Header -->

    <div class=".container-fluid header-part">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- Left side div -->
                    <div class="col-md-6 col-12 header-part-left">
                        <p>Welcome to my weather Page</p>
                        <h1>Get The Latest <span class="clr">Weather</span> Info of Your City</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <!-- Right side div -->
                    <div class="col-md-6 col-12 header-part-right">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="./images/a1.jpg" class="d-block w-100" alt="First Slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="./images/a2.jpg" class="d-block w-100" alt="Second Slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="./images/a4.jpg" class="d-block w-100" alt="Third Slide">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Footer -->
    {{>footer}}

    <!-- Option 1: Bootstrap Bundle with Popper -->
    {{>scripts}}


</body>

</html>